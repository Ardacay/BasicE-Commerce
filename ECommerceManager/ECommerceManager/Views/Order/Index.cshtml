@model IEnumerable<ECommerceManager.Dtos.Order.OrderDto>

@{
    ViewData["Title"] = "Orders";
}

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
<link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" rel="stylesheet" />

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h2><i class="fas fa-box"></i> Order List</h2>
        <a asp-action="Create" class="btn btn-success"><i class="fas fa-plus-circle"></i> Create New</a>
    </div>

    <table class="table table-bordered table-hover text-center align-middle shadow-sm">
        <thead class="table-dark">
            <tr>
                <th>@Html.DisplayNameFor(model => model.First().Id)</th>
                <th>@Html.DisplayNameFor(model => model.First().CustomerName)</th>
                <th>@Html.DisplayNameFor(model => model.First().OrderDate)</th>
                <th>@Html.DisplayNameFor(model => model.First().ProductId)</th>
                <th>@Html.DisplayNameFor(model => model.First().CategoryId)</th>
                <th>Category Name</th>
                <th>Product Name</th>
                <th>Price</th>
                <th>Stock</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Id</td>
                    <td>@item.CustomerName</td>
                    <td>@item.OrderDate.ToShortDateString()</td>
                    <td>@item.ProductId</td>
                    <td>@item.CategoryId</td>

                    <td class="category-cell" data-id="@item.CategoryId">
                        <span class="category-name text-secondary">
                            <i class="fas fa-spinner fa-spin"></i> Loading...
                        </span>
                    </td>

                    <td class="product-cell" data-id="@item.ProductId">
                        <span class="product-name text-secondary">
                            <i class="fas fa-spinner fa-spin"></i> Loading...
                        </span>
                    </td>

                    <td class="product-price text-secondary">₺...</td>
                    <td class="product-stock text-secondary">...</td>

                    <td>
                        <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-warning"><i class="fas fa-edit"></i></a>
                        <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-info"><i class="fas fa-eye"></i></a>
                        <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-danger"><i class="fas fa-trash-alt"></i></a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

@section Scripts {
    <script src="https://code.jquery.com/jquery-3.7.1.min.js" crossorigin="anonymous"></script>
    <script>
        $(document).ready(function () {
            $(".category-cell").each(function () {
                const td = $(this);
                const categoryId = td.data("id");

                $.ajax({
                    url: `https://localhost:44321/api/Category/GetById/${categoryId}`,
                    method: "GET",
                    success: function (data) {
                        td.find(".category-name").removeClass("text-secondary").text(data.name);
                    },
                    error: function () {
                        td.find(".category-name").removeClass("text-secondary").text("Unknown");
                    }
                });
            });

            $(".product-cell").each(function () {
                const td = $(this);
                const productId = td.data("id");
                const tr = td.closest("tr");

                $.ajax({
                    url: `https://localhost:44321/api/Product/GetById/${productId}`,
                    method: "GET",
                    success: function (data) {
                        td.find(".product-name").removeClass("text-secondary").text(data.name);
                        tr.find(".product-price").removeClass("text-secondary").text(`₺${data.price}`);
                        tr.find(".product-stock").removeClass("text-secondary").text(data.stock);
                    },
                    error: function () {
                        td.find(".product-name").removeClass("text-secondary").text("Unknown");
                        tr.find(".product-price").removeClass("text-secondary").text("-");
                        tr.find(".product-stock").removeClass("text-secondary").text("-");
                    }
                });
            });
        });
    </script>
}
