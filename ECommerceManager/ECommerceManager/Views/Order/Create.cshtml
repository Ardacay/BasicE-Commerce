@model ECommerceManager.Dtos.Order.OrderDto


@{
    ViewData["Title"] = "Create Order";
}

<h2>Create Order</h2>

<form asp-action="Create" method="post">
    @* CustomerName giriş yapan kullanıcıdan hidden field ile *@
    <input type="hidden" name="CustomerName" value="@User.Identity.Name" />

    @* OrderDate otomatik olarak backend’de de atanabilir ama burada da yollayabiliriz *@
    <input type="hidden" name="OrderDate" value="@DateTime.Now" />

    <div class="form-group">
        <label for="ProductId">Product</label>
        <select asp-for="ProductId" class="form-control" asp-items="ViewBag.Products">
            <option value="">-- Select Product --</option>
        </select>
    </div>

    <div class="form-group">
        <label for="Stock">Stock</label>
        <input asp-for="Items[0].Stock" class="form-control" />
    </div>

    <div class="form-group">
        <label for="Price">Price</label>
        <input asp-for="Items[0].Price" class="form-control" />
    </div>

    <button type="submit" class="btn btn-primary">Create</button>
</form>
