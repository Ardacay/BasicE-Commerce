@model List<ECommerceManager.Dtos.RoleDtos.UserRoleDto>



<table class="table table-bordered">
    <thead>
        <tr>
            <th>Kullanıcı Adı</th>
            <th>Ad Soyad</th>
            <th>Mevcut Rol</th>
            <th>Yeni Rol Ata</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var user in Model)
        {
            <tr>
                <td>@user.UserName</td>
                <td>@user.FullName</td>
                <td>@user.Roles</td>
                <td>
                    <form asp-action="ChangeRole" method="post">
                        <input type="hidden" name="userId" value="@user.Id" />
                        <select name="newRole" class="form-select">
                            <option value="">Rol Seç</option>
                            @if (ViewBag.AllRoles != null)
                            {
                                foreach (var role in ViewBag.AllRoles as List<string>)
                                {
                                    <option value="@role" selected="@(role == user.Roles ? "selected" : "")">@role</option>
                                }
                            }
                            else
                            {
                                <option disabled>Roller Yüklenemedi</option>
                            }
                        </select>
                        <button type="submit" class="btn btn-primary btn-sm mt-1">Kaydet</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>
